<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.pg.fk.intents_challenge.Activity2">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="please enter your name"
        android:inputType="textPersonName"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"/>

    <EditText
        android:id="@+id/etNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="please enter your number"
        android:inputType="textPersonName"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"/>

    <EditText
        android:id="@+id/etWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="please enter your website"
        android:inputType="textPersonName"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"/>

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="please enter your location"
        android:inputType="textPersonName"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHappy"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/ic_sentiment_satisfied_black_24dp"
            />

        <ImageView
            android:id="@+id/ivNeutral"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/ic_sentiment_neutral_black_24dp"/>

        <ImageView
            android:id="@+id/ivSad"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/ic_sentiment_dissatisfied_black_24dp"/>
    </LinearLayout>
</LinearLayout>
